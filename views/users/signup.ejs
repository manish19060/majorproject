<% layout("/layouts/boilerplate") %>

    <div class="row mt-3 ">
        <h1 class="col-6 offset-3">SignUp on WonderLust</h1>

        <div class="col-6 offset-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-level">Enter username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-level">Enter email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                    
                </div>

                <div class="mb-3">
                    <label for="password" class="form-level">Enter password</label>
                    <input type="password" id="password"  name="password" class="form-control" required>
                    
                </div>

                <button class="btn btn-success">SignUp</button>
            </form>  
        </div>
    </div>